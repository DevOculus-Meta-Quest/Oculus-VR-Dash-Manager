<Window
    x:Class="OVR_Dash_Manager.Forms.Dash_Customizer.frm_DashCustomizer"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:OVR_Dash_Manager.Forms.Dash_Customizer"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="frm_DashCustomizer"
    Width="800"
    Height="450"
    mc:Ignorable="d">
    <Grid>
        <Label
            Margin="10,10,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Content="Select PNG or DDS file:" />
        <TextBox
            x:Name="txtInputFilePath"
            Width="300"
            Height="23"
            Margin="10,30,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top" />
        <Button
            Width="75"
            Margin="320,30,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Click="BrowseInputFile_Click"
            Content="Browse" />

        <Label
            Margin="10,70,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Content="Output file path:" />
        <TextBox
            x:Name="txtOutputFilePath"
            Width="300"
            Height="23"
            Margin="10,90,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top" />
        <Button
            Width="75"
            Margin="320,90,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Click="BrowseOutputFile_Click"
            Content="Browse" />

        <Button
            x:Name="btnConvertToDDS"
            Width="150"
            Margin="10,130,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Click="ConvertToDDS_Click"
            Content="Convert to DDS" />
        <Button
            x:Name="btnConvertToPNG"
            Width="150"
            Margin="170,130,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Click="ConvertToPNG_Click"
            Content="Convert to PNG" />
    </Grid>

</Window>
