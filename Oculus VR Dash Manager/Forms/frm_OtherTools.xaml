<Window
    x:Class="OVR_Dash_Manager.Forms.frm_OtherTools"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Other Tools"
    Width="800"
    Height="475"
    ResizeMode="NoResize"
    Topmost="True"
    WindowStartupLocation="CenterOwner"
    mc:Ignorable="d">

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <!--  Reference to the external style  -->
                <ResourceDictionary Source="../Theme/MetroDark.MSControls.Core.Implicit.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>

    <Grid Height="465">
        <Grid.Background>
            <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1">
                <GradientStop Offset="0.567" Color="Black" />
                <GradientStop Offset="1" Color="White" />
            </LinearGradientBrush>
        </Grid.Background>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="11*" />
            <ColumnDefinition Width="69*" />
        </Grid.ColumnDefinitions>
        <Label
            x:Name="lbl_Title"
            Grid.ColumnSpan="2"
            Height="41"
            Margin="10,5,10,0"
            VerticalAlignment="Top"
            HorizontalContentAlignment="Center"
            VerticalContentAlignment="Center"
            Content="Other Tools Menu"
            Cursor="Hand"
            FontFamily="Copperplate Gothic Bold"
            FontSize="36"
            FontWeight="Bold">
            <Label.Foreground>
                <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1">
                    <GradientStop Color="Black" />
                    <GradientStop Offset="1" Color="White" />
                </LinearGradientBrush>
            </Label.Foreground>
            <Label.BorderBrush>
                <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1">
                    <GradientStop Color="Black" />
                    <GradientStop Offset="1" Color="#FF31338E" />
                    <GradientStop Offset="0.319" Color="#FF0F102D" />
                    <GradientStop Offset="0.581" Color="#FF0F102D" />
                </LinearGradientBrush>
            </Label.BorderBrush>
        </Label>
        <!--  Your UI elements go here  -->
        <Button
            x:Name="btn_InstallAPK"
            Grid.Column="1"
            Width="104"
            Margin="463,162,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Click="btn_InstallAPK_Click"
            Content="Install APK" />
        <Button
            x:Name="btn_ADBFileManager"
            Grid.Column="1"
            Width="144"
            Margin="463,194,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Click="btn_ADBFileManager_Click"
            Content="ADB FileManager" />
        <GroupBox
            x:Name="gb_ADBMenu"
            Grid.Column="1"
            Margin="438,129,60,232"
            Header="ADB Menu" />
        <GroupBox
            x:Name="gb_ProfileManager"
            Grid.ColumnSpan="2"
            Margin="10,328,615,57"
            Header="Profile Manager" />
        <GroupBox
            x:Name="gb_DashCustomizer"
            Grid.Column="1"
            Margin="90,324,345,57"
            Header="Dash Customizer" />
        <Button
            x:Name="btn_PNG2DDS"
            Grid.Column="1"
            Width="214"
            Margin="100,363,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Click="btn_PNG2DDS_Click"
            Content="Oculus Dash Customizer" />
        <Button
            x:Name="btn_ProfileManager1"
            Grid.ColumnSpan="2"
            Width="134"
            Margin="22,363,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Click="btn_ProfileManager1_Click"
            Content="Profile Manager" />
        <GroupBox
            x:Name="gb_OculusKiller"
            Grid.Column="1"
            Margin="397,324,60,57"
            Header="Oculus Killer" />
        <Button
            x:Name="btn_OculusView"
            Grid.ColumnSpan="2"
            Width="129"
            Margin="35,184,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Click="btn_OculusView_Click"
            Content="Oculus Viewer" />
        <GroupBox
            x:Name="gb_Oculus"
            Grid.ColumnSpan="2"
            Margin="10,119,520,237"
            Header="Oculus" />
        <Label
            x:Name="lbl_ProfileManagerTest_Copy"
            Grid.ColumnSpan="2"
            Width="225"
            Margin="22,148,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Content="Warning: Still in Development"
            FontSize="16"
            Foreground="#E5FF0000" />
        <Button
            x:Name="btn_DeleteLog"
            Grid.Column="1"
            Width="100"
            Height="30"
            Margin="514,368,76,67"
            Click="btn_DeleteLog_Click"
            Content="Delete" />
        <Button
            x:Name="btn_OpenLog"
            Grid.Column="1"
            Margin="415,368,181,67"
            Click="btn_OpenLog_Click"
            Content="Logfile"
            IsEnabled="False" />
    </Grid>
</Window>